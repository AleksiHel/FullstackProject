@using HtmlAgilityPack;

@model List<Article>


@if (User.IsInRole("admin"))
{
    <a href="/Articles/NewPost" class="btn btn-dark mb-3" role="button">Create new post</a>
}

<h1 class="mt-5 text-center">Articles</h1>

<div class="container-md" >
@if (Model.Count > 0)
{
    <div class="row row-cols-1 row-cols-lg-3 g-4 mt-5">

    @foreach (var x in Model)
        {


            string contentShort = HtmlTruncator.TruncateHtml(x.Content, 390);
            string titleShort = HtmlTruncator.TruncateHtml(x.Title, 45);
            string titleFormatted = x.Title.Replace(" ", "-");


        <div class="col">
            <div class="card h-100 border-0">
                <img src="images/intro.webp" class="card-img-top" alt="...">
                <div class="card-body">
                    <h2 class="card-title">@titleShort</h2>
                    <p class="lead">@x.PublishingDate.ToShortDateString()</p>
                    <p class="card-text">@Html.Raw(@contentShort)</p>
                        <a href="@Url.Action("Read", new { slug = @x.Slug })" class="btn btn-dark">Read</a>
                    </div>
            </div>
        </div>
    }
</div>

} else {<p>No articles found!</p>}

</div>