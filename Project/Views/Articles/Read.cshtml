@model Article

@if (Model != null) {

    <h1 class="mt-5 text-center">@Model.Title</h1>

    <p class="mt-3 text-center fs-2">@Model.PublishingDate.ToShortDateString()</p>
    <div class="container mt-5">
        <div class="row justify-content-center align-content-center">
            <div class="col-md-8 ">
                <img src="~/images/jorppa.jpg" class="img-fluid ">
            </div>
        </div>

    </div>
<div class="container-md">

    <p>@Html.Raw(@Model.Content)</p>
</div>
} else {
    <p>Haista kikki t. Mikkihiiri</p>
    <p>(Ei artikkeliä tällä URL)</p>
}
