@model List<Service>

@{
    int testi;

    @if (Model.Count() <= 3)
    {
        testi = Model.Count();
    } else { testi = 3; }


}

<div class="container-md text-center mt-5" style="max-width: 600px;">
<h1>Services</h1>
    <p class="lead text-center mt-3">We're dedicated to capturing the beauty and essence of every moment. 
        </p>
    <p class="lead ">Below, you’ll find a detailed list of our most sought-after services, each tailored to bring your vision to life with clarity and creativity. </p>
    <p class="lead ">Choose the perfect service that aligns with your expectations and let us handle the rest with expertise and care. </p>
</div>
<div class="container-sm mt-5">
    <div class="row row-cols-1 row-cols-lg-@testi g-4">
    @foreach (var entry in Model)
    {
        <div class="col text-white">
            <div class="card border-0">
                <div class="card-body bg-black">
                        <img src="@entry.ImagePath" class="card-img-top mt-2" alt="...">
                        <h4 class="card-title text-center mt-4 fw-bold">@entry.ServiceName</h4>
                        <p class="card-text ServiceTextFormat mt-5">@entry.ServiceDescription</p>
                        <p class="mt-3 lead fw-bold">Starting from @entry.ServicePrice €</p>

                        @if (entry.AdditionalInformation != null) {
                        <div class="collapse" id="collapseExample@(testi)">
                            <div class="ServiceTextFormat">
                                <div class="small">@entry.AdditionalInformation</div>
                            </div>
                        </div>
                        <a href="/Contact?SelectedValue=@entry.ServiceName" class="btn btn-light fw-bold" role="button">I want this</a>
                        <p class="mt-3" id="arrowhover">
                            <i class="bi bi-chevron-compact-down fs-5"
                               data-bs-toggle="collapse" data-bs-target="#collapseExample@(testi)" aria-expanded="false" aria-controls="collapseExample@(testi)">

                            </i><small>info</small>

                        </p>
                        }
                
                </div>

            </div>
        </div>

        testi++;
    }
</div>

</div>
<div class="container text-center mt-5 mb-5">
    <h1 style="ransform: scale(1.5); transform-origin: 40% 20%;">
        Questions? Ideas? Modifications?
    </h1>
<i class="bi bi-caret-down-fill fs-1"></i>
<br />
<div class="hovercontact">
<a class="fs-1 text-white fw-bold opaci" href="/contact">Contact</a>
    </div>
</div>