@model List<Service>

@{
    int testi = 0;


}

<h1 class="text-center">Hienot palveluni ovat tässä</h1>
<p class="text-center lead">Liiba laaba luuu duuuba ssafas da asdf f</p>
<hr />
<div class="container">
    <div class="row row-cols-1 row-cols-lg-3 g-4 mt-5">
    @foreach (var entry in Model)
    {
        <div class="col">
            <div class="card border-0">
                <div class="card-body p-3">
                    <h2 class="card-title text-center mt-2">@entry.ServiceName</h2>
                        <img src="images/intro.webp" class="card-img-top mt-3" alt="...">

                    <p class="card-text mt-5">@entry.ServiceDescription</p>
                        <p>@entry.ServicePrice €</p>


                <div class="collapse" id="collapseExample@(testi)">
                    @entry.AdditionalInformation
                    </div>                
                    <p class="d-inline-flex gap-1">
                        <div class="d-flex justify-content-center align-content-center" id="arrowhover">
                        <i class="bi bi-chevron-compact-down fs-1"
                            data-bs-toggle="collapse" data-bs-target="#collapseExample@(testi)" aria-expanded="false" aria-controls="collapseExample@(testi)">

                    </i></div>
                </p>
                </div>

            </div>
        </div>

        testi++;
    }
</div>

</div>

