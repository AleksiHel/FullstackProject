<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] The Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Rubik:ital,wght@0,600;1,600&display=swap" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body class="bg-black">
    @if (User.Identity.IsAuthenticated)

    {
            <div class="d-flex justify-content-end text-white">
                <p class="me-5">Logged in as: <strong>@(User.Identity.Name)</strong></p>
            <form asp-controller="Home" asp-action="Logout" method="get">
                <a href="javascript:;" class="me-2" onclick="this.closest('form').submit();" style="text-decoration: none; color: inherit;">
                    Logout
                </a>
            </form>

            </div>
    }
    <header>
<nav class="navbar navbar-expand-lg navbar-dark bg-black fs-5 sticky-top">
    <div class="container-fluid">
        <!-- Toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Navbar contents -->
        <div class="collapse navbar-collapse position-relative background-trand" id="navbarSupportedContent">
            <!-- Left aligned Testi -->
            <ul class="navbar-nav me-auto ms-5 i" id="top">
                
                <li class="nav-item">
                    <a class="nav-link text-white position-static fs-3" href="/">Testi</a>
                </li>
            </ul>
            <!-- Centered links -->
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Articles" asp-action="Index">Articles</a>
                </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Profile" asp-action="Index">Whoami</a>
                        </li>
                         @if (User.IsInRole("admin")) {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Management" asp-action="Index">Management</a>
                        </li>
                         }

                        </ul>
            <!-- Right aligned icons -->
            <ul class="navbar-nav ms-auto me-5 fs-3">
                <li class="nav-item">
                    <a class="nav-link" href="https://www.linkedin.com">
                        <i class="bi bi-linkedin"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="https://www.instagram.com">
                        <i class="bi bi-instagram"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
            <hr class="navbar-divider">

</nav>


    </header>




        <main role="main" class="p-0 bg-black text-white">

            @RenderBody()
        </main>

    <footer class="footer mt-5 text-white text-muted bg-black">
        <div class="container">
            &copy; 2024 - Fullstack  - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://static.elfsight.com/platform/platform.js" data-use-service-core defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
